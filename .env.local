# Local Development Environment Configuration
# Copy this to .env for local testing

# ============================================
# CORE SETTINGS
# ============================================
APP_NAME=Ultimate Media Downloader
VERSION=3.1.0
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================
# SERVER CONFIGURATION
# ============================================
HOST=0.0.0.0
PORT=8080
WORKERS=2

# ============================================
# AUTHENTICATION (DISABLED FOR LOCAL TESTING)
# ============================================
REQUIRE_API_KEY=false
API_KEY=test-key-local-development

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_DIR=/tmp/railway-downloads
FILE_RETENTION_HOURS=1.0

# ============================================
# PUBLIC URL
# ============================================
PUBLIC_BASE_URL=http://localhost:8080

# ============================================
# DOWNLOAD CONFIGURATION
# ============================================
MAX_CONCURRENT_DOWNLOADS=5
DEFAULT_TIMEOUT_SEC=1800
PROGRESS_TIMEOUT_SEC=300
MAX_CONTENT_LENGTH=10737418240

# ============================================
# RATE LIMITING (RELAXED FOR TESTING)
# ============================================
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# ============================================
# CORS (ALLOW ALL FOR LOCAL TESTING)
# ============================================
CORS_ORIGINS=*

# ============================================
# FEATURE FLAGS
# ============================================
ALLOW_YT_DOWNLOADS=true
ALLOWED_DOMAINS=

# ============================================
# WEBHOOK CONFIGURATION
# ============================================
WEBHOOK_ENABLE=true
WEBHOOK_TIMEOUT_SEC=10
WEBHOOK_MAX_RETRIES=3

# ============================================
# LOGGING
# ============================================
LOG_DIR=./logs
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# ============================================
# DOCUMENTATION
# ============================================
DISABLE_DOCS=false

# ============================================
# STATIC FILES
# ============================================
STATIC_DIR=./static

# ============================================
# COOKIE MANAGEMENT
# ============================================
# Leave empty for auto-generation
COOKIE_ENCRYPTION_KEY=

# ============================================
# DEVELOPMENT HELPERS
# ============================================
# Uncomment to test with specific encryption key
# COOKIE_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Uncomment to test CORS restrictions
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Uncomment to test domain restrictions
# ALLOWED_DOMAINS=youtube.com,vimeo.com
