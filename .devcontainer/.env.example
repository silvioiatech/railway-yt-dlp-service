# Development Container Environment Variables
# Copy this file to .env to customize your local development environment

# ====================
# Core Settings
# ====================
REQUIRE_API_KEY=false
API_KEY=test-key-local-dev

# ====================
# Storage Configuration
# ====================
STORAGE_DIR=/app/data
PUBLIC_BASE_URL=http://localhost:8080

# ====================
# Feature Flags
# ====================
ALLOW_YT_DOWNLOADS=true
WEBHOOK_ENABLE=true

# ====================
# Concurrency Settings
# ====================
WORKERS=2
MAX_CONCURRENT_DOWNLOADS=3

# ====================
# CORS Configuration
# ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# ====================
# Logging
# ====================
LOG_LEVEL=DEBUG
DEBUG=true

# ====================
# Rate Limiting
# ====================
# Requests per second
RATE_LIMIT_RPS=10
# Burst capacity
RATE_LIMIT_BURST=20

# ====================
# File Management
# ====================
# File retention in hours (1 hour for testing)
FILE_RETENTION_HOURS=1.0

# ====================
# Optional: Cookie Management
# ====================
# COOKIE_FILE_PATH=/app/cookies.txt

# ====================
# Optional: Domain Allowlist
# ====================
# ALLOWED_DOMAINS=youtube.com,vimeo.com

# ====================
# Optional: Webhook Configuration
# ====================
# WEBHOOK_URL=http://example.com/webhook
# WEBHOOK_TIMEOUT=30
