# Required Configuration
API_KEY=your-secret-api-key-here
ALLOW_YT_DOWNLOADS=false

# Railway Storage Configuration
# Mount a Railway Volume and set this to the mount path (e.g. /app/data)
STORAGE_DIR=/app/data
# Set this to your deployed Railway app's URL
PUBLIC_BASE_URL=https://your-app-name.up.railway.app

# Performance Configuration
# Number of concurrent download workers
WORKERS=2
# Rate limiting (requests per second)
RATE_LIMIT_RPS=2
# Rate limiting burst size
RATE_LIMIT_BURST=5

# Timeouts and Limits
# Default download timeout in seconds (30 minutes)
DEFAULT_TIMEOUT_SEC=1800
# Maximum content length in bytes (10GB)
MAX_CONTENT_LENGTH=10737418240
# Progress timeout in seconds (abort if no progress for 5 minutes)
PROGRESS_TIMEOUT_SEC=300

# Security Configuration
# Domain allowlist (optional, comma-separated, leave empty to allow all)
ALLOWED_DOMAINS=example.com,trusted-site.org

# Server Configuration
PORT=8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
